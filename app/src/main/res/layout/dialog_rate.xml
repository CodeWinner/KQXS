<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="300dp"
    android:orientation="vertical">

    <TextView
        android:background="@color/colorPrimary"
        android:textSize="30dp"
        android:id="@+id/textConnectDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Hi!" />
    <TextView
        android:text="Phản hồi và đánh giá 5 sao giúp chúng tôi tiếp tục phát triển thuật toán chính xác hơn."
        android:id="@+id/txtCaDao"
        android:textColor="@color/black"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/rating" />
    <Button
        android:id="@+id/btnOkRating"
        android:textColor="@color/colorTextWelcome"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_submit_bg"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:text="Ok"
        android:layout_width="70dp"
        android:layout_height="30dp" />
</LinearLayout>